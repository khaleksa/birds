.bg-btm-container
  / Content
  .container.content
    / Content BODY
    .row.about-container.mtop20.content-container
      .col-sm-12.col.col-md-8.pright15.m-no-float
        - bg_scope = 'big_years.prises'
        .row.about-text
          %h4
            = I18n.t('.title', scope: bg_scope)
          %p
            = I18n.t('.description', scope: bg_scope)
            %p
            = image_tag 'contests/bg_2020.jpg', class: 'img-responsive image-center mbtm15'
          %p
            = I18n.t('.good_luck', scope: bg_scope)
          %p
            %i
              = I18n.t('.rules', scope: bg_scope)
              = link_to "#{I18n.t('.big_year', scope: bg_scope)}", big_year_path
