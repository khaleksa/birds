.bg-btm-container
  .container.content
    - devise_scope = 'devise.registrations.new'
    .row.login-registration-container.mtop20.content-container
      %h3.acenter.mbtm20
        = I18n.t('.title', scope: devise_scope)

      .col.col-md-7.col-sm-12.fcenter
        = form_for :user, url: user_registration_path, html: {id: 'invisible-recaptcha-form'} do |f|
          .reg-form-cntainer
            .row
              .col-md-3.col-sm-3.lbl-container
                %label{:for => "fname"}
                  = I18n.t('.name', scope: devise_scope)
              .col-md-6.col-sm-6.input-container
                = f.text_field :first_name, autofocus: true, class: 'form-control'
              .col-md-3.col-sm-3.str-container
                %span.req *
            .row
              .col-md-3.col-sm-3.lbl-container
                %label{:for => "lname"}
                  = I18n.t('.surname', scope: devise_scope)
              .col-md-6.col-sm-6.input-container
                = f.text_field :last_name, class: 'form-control'
              .col-md-3.col-sm-3.str-container
                %span.req *
            .row
              .col-md-3.col-sm-3.lbl-container
                %label{:for => "email"}
                  = I18n.t('.email', scope: devise_scope)
              .col-md-6.col-sm-6.input-container
                = f.email_field :email, class: 'form-control'
              .col-md-3.col-sm-3.str-container
                %span.req *
            .row
              .col-md-3.col-sm-3.lbl-container
                %label{:for => "pwrd"}
                  = I18n.t('.password', scope: devise_scope)
              .col-md-6.col-sm-6.input-container
                = f.password_field :password, autocomplete: "off", class: 'form-control'
              .col-md-3.col-sm-3.str-container
                %span.req *
            .row
              .col-md-3.col-sm-3.lbl-container
                \&nbsp;
              .col-md-6.col-sm-6.input-container
                %label
                  = f.check_box :big_year
                  %span
                %label{:for => "participate"}
                  = I18n.t('.big_year', scope: devise_scope)
              .col-md-3.col-sm-3.str-container
                \&nbsp;
            .row.acenter
              .col-md-3.col-sm-3.lbl-container
                \&nbsp;
              .col-md-6.col-sm-6.input-container
                = invisible_recaptcha_tags callback: 'submitInvisibleRecaptchaForm', class: 'mtop10 w100p btn-lg btn btn-info', text: "#{I18n.t('.sign_up', scope: devise_scope)}", hl: 'ru'
                =link_to "#{I18n.t('.sign_in', scope: devise_scope)}", new_user_session_path
            .row
              .col-md-3.col-sm-3.lbl-container
                \&nbsp;
              .col-md-6.col-sm-6.input-container
                =link_to "#{I18n.t('.fb_sign_up', scope: devise_scope)}", user_facebook_omniauth_authorize_path, class: 'fb-login'
              .col-md-3.col-sm-3.str-container
                \&nbsp;

    / Content FOOT
    .row.top-row.acenter
      %p.sm-display-none.info-color.mtop50
        = I18n.t('.data_confidentiality', scope: devise_scope)
