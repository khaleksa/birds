$('.search-results').empty().append("<%= escape_javascript( render partial: 'search/result' ) %>");

<% if @species && @species.size > 0 %>
    $('.search-results').empty().append("<%= escape_javascript( render partial: 'search/result' ) %>");
    $('.search-description').empty().append("<%= I18n.t('search.help')%>");
<% else %>
    $('.search-description').empty().append("<%= I18n.t('search.not_found')%>");
<% end %>

//*** Bird's species: set species id from search result to form ***
$('.add-photo-container .search-results a').on('click', function(event) {
    $(this).closest('.add-photo-container').find('span.selected-species').text($(this).text());
    $('#bird-species-id').val($(this).data('id'));
    event.preventDefault();
})
