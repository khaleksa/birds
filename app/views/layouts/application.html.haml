!!!
%html
%head
  %title
    = I18n.t('.layouts.title')
  %meta{ 'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8' }
  %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge' }
  %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }

  %meta{content: "#{I18n.t('.layouts.application.og_title')}", property: 'og:site_name'}
  %meta{content: "#{og_title}", property: 'og:title'}
  %meta{content: "#{og_description}", property: 'og:description'}
  %meta{content: "#{og_image_url}", property: 'og:image'}

  = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
  = favicon_link_tag "favicon.ico"

  / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
  /[if lt IE 9]
    <script src="http://getbootstrap.com/docs-assets/js/html5shiv.js"></script>
    <script src="http://getbootstrap.com/docs-assets/js/respond.min.js"></script>

  = csrf_meta_tags
  = render 'shared/ga_code'
%body
  #wrap
    = render 'shared/navbar'
    = render 'shared/search'

    = yield
  = render 'shared/footer'

  = javascript_include_tag "application", "data-turbolinks-track" => true
